<div style="display: flex; justify-content: center; align-items: center; flex-direction: column;">
    <h2>Welcome {{format_name user.name}}!</h2>
    <br>
    <h3>Wishlist</h3>
    {{#if empty}}
    <p>Your wishlist is currently empty!</p>
    {{else}} 
      {{#each user.products as |product| }}
      <div class="mt-3 row mb-4 product">
        <div class="col-md-5">
          <h4>
            <a href="/products/{{product.id}}">{{product.product_name}}</a>
          </h4>
          <img src="{{product.image_url}}" alt="{{product.description}}">
        </div>
        <div class="col-md-7">
          <p>
            {{product.description}}
            Price: ${{product.price}}
          </p>
          <button class="wishlistRemove clicked btn btn-danger" id="{{product.id}}">Remove from Wishlist</button>
          <br>
          <br>
          {{#if product.cart}}
          <button class="cartRemove clicked btn btn-danger" id="{{product.id}}">Remove from Cart</button>
          {{else}} 
          <button class="cartAdd unclicked btn btn-primary" id="{{product.id}}">Add to Cart</button>
          {{/if}}
        {{!-- <button class="wishlistRemove clicked" id="{{product.id}}">Remove from Wishlist</button> --}}
        </div>
      </div>
      {{/each}}
    {{/if}}
</div>
<script src="/js/home.js"></script>

