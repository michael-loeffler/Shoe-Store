<div class="row">
  <div class="col-md-6 mb-3">
    <h2>Login</h2>

    <form class="form login-form">
      <div class="form-group mb-3">
        <label class="form-label" for="email-login">email:</label>
        <input class="form-input form-control" type="text" id="email-login" />
      </div>
      <div class="mb-3 form-group">
        <label for="password-login form-label">password:</label>
        <input class="form-input form-control" type="password" id="password-login" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">Login</button>
      </div>
    </form>
  </div>
  <div class="col-md-6 mb-3">
    <h2>Signup</h2>

    <form class="form signup-form">
      <div class="form-group mb-3">
        <label for="name-signup form-label">name:</label>
        <input class="form-input form-control" type="text" id="name-signup" />
      </div>
      <div class="form-group mb-3">
        <label for="email-signu form-labelp">email:</label>
        <input class="form-input form-control" type="text" id="email-signup" />
      </div>
      <div class="form-group mb-3">
        <label for="password-signup form-label">password: (must be 8 or more characters)</label>
        <input class="form-input form-control" type="password" id="password-signup" />
      </div>
      <div class="form-group mb-3">
        <button class="btn btn-primary" type="submit">Sign up</button>
      </div>
    </form>
  </div>
</div>

<script src="./js/login.js"></script>
