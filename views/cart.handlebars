<div>
    <h3>Cart</h3>
    {{#each products as |product| }}
    <div class="row mb-4 product">
      <div class="col-md-5">
        <h4>
          <a href="/products/{{product.id}}">{{product.product_name}}</a>
        </h4>
        <img src="{{product.image_url}}" alt="{{product.description}}">
      </div>
      <div class="col-md-7">
        <p>
          {{product.description}}
          Price: ${{product.price}}
        </p>
        <button id="purchase">Purchase</button>
      </div>
    </div>
    {{/each}}
</div>
<script src="/js/cart.js"></script>



<script src="https://smtpjs.com/v3/smtp.js"></script>