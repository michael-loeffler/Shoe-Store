




  
<div class="dropdown d-flex justify-content-end">
  <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdown" data-bs-toggle="dropdown" aria-expanded="false">
    Sort 
  </button>
  <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
    <li><a class="dropdown-item" href="/?sort=price">Price</a></li>
    <li><a class="dropdown-item" href="/">Stock</a></li>
  </ul>
</div>
	<div class="container">
	<div class="row">
{{#if logged_in}}
    {{#each productsLoggedIn as |product|}}
    <div class="col-sm-4">
    <a href="./products/{{product.id}}"><h2> {{product.product_name}}</h2></a>
    {{!-- {{product.link}} will go to product/productid then will look up specific product --}}
    <img src="{{product.image_url}}"/>
    <p>Price: ${{product.price}} </p>
    {{!-- <p>{{product.rating}}</p> --}}
    <p>{{product.stock}} in stock</p>

    {{#if product.cart}}
    <button class="cartRemove clicked" id="{{product.id}}">Remove from Cart</button>
    {{else}}
    <button class="cartAdd unclicked" id="{{product.id}}">Add to Cart</button>
    {{/if}}

    {{#if product.wishlist}}
    <button class="wishlistRemove clicked" id="{{product.id}}">Remove from Wishlist</button>
    {{else}} 
    <button class="wishlistAdd unclicked" id="{{product.id}}">Add to Wishlist</button>
    {{/if}}

    </div>
    {{/each}}
{{else}}
    {{#each products as |product|}}
    <div class="col-sm-4">
    <a href="./products/{{product.id}}"><h2> {{product.product_name}}</h2></a>
    {{!-- {{product.link}} will go to product/productid then will look up specific product --}}
    <img src="{{product.image_url}}"/>
    <p>Price: ${{product.price}} </p>
    {{!-- <p>{{product.rating}}</p> --}}
    <p>{{product.stock}} in stock</p>
    </div>
    {{/each}}
{{/if}}

	

	
	</div>
	</div> 

